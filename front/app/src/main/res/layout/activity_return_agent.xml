<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui.mobile.returnmobile.ReturnAgentActivity">

    <TextView
        android:id="@+id/textViewReturnAgentMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대리점 반납"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewReturnAgentSearchMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대리점 검색"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewReturnAgentMessage" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewAgent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defaultQueryHint="구미"
        android:background="@drawable/border_spinner_layout"
        app:layout_constraintTop_toBottomOf="@id/textViewReturnAgentSearchMessage" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/searchViewAgent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_return_agent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <Button
        android:id="@+id/buttonTemp"
        android:text="임시"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>